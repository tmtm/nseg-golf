<h1>Login</h1>

<%= form_tag sessions_path do %>
<table id="login_form">
    <tr>
    <td><%= label_tag :name, 'Login ID' %></td>
    <td><%= text_field_tag :name %></td>
</tr>

<tr>
    <td><%= label_tag :pass, 'Password' %></td>
    <td><%= password_field_tag :password %></td>
</tr>

<tr>
    <td><%= submit_tag "Login" %></td>
</tr>
</table>

<% end %>
